<% layout('layouts/boilerplate') %> 
  <div class="row">
    <h1 class="text-center">EditCampground</h1>
    <div clas="col-6 offset-3">
      <form action="/campgrounds/<%=camp.id%>?_method=PUT" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
        <div class="mb-3">
          <label class="form-label" for="titleId">Title:</label>
          <input class="form-control" type="text" name="campground[title]" id="titleId"  value="<%=camp.title%>" required>
          <div class="invalid-feedback">
            Please provide Title.
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="locationId">Location:</label>
          <input class="form-control" type="text" name="campground[location]" id="locationId" value="<%=camp.location%>" required>
          <div class="invalid-feedback">
            Please provide Title.
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Campground Price</label>
          <div class="input-group">
              <span class="input-group-text" id="price-label">$</span>
              <input type="text" class="form-control" placeholder="0.00" aria-label="Username" aria-describedby="price-label" name="campground[price]" value="<%=camp.price%>" required>
          </div>
          <div class="invalid-feedback">
            Please provide Title.
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="descriptionId">Description:</label>
          <textarea class="form-control" type="text" name="campground[description]" id="descriptionId" required><%= camp.description%></textarea>
          <div class="invalid-feedback">
            Please provide Title.
          </div>
        </div>
        <!-- image -->
        <div class="mb-3">
          <label for="imageId" class="form-label">Choose Images</label>
          <input class="form-control" name = 'image' type="file" id="imageId" multiple >
        </div>
        <div class="mb-3 d-flex">
          <% camp.images.forEach(function(img,i){ %> 
            <img src="<%= img.thumbnail %> " class="img-thumbnail img-fluid" style= "height:200px"  alt=""><br>
            <div class="form-check-inline">
              <input type="checkbox" id = "image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
            </div>
            <label for="image-<%=i%>">Delete?</label>
          <% }) %> 
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Edit Campground</button>
        </div>
      </form>
      <a href="/campgrounds/<%=camp._id%>">Go Back to Campground</a>
    </div>
  </div>